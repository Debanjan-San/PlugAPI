{
  "compilerOptions": {
    "experimentalDecorators": true,            
    "target": "ESNext",                                
    "module": "commonjs",                           
    "lib": [
      "ESNext",
      "DOM"
    ],                                   
    "outDir": "./build", 
    "moduleResolution": "node",                   
    "strict": true,          
    "noEmitHelpers": false,                      
    "esModuleInterop": true,                        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true        
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}